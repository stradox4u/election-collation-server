generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PollingUnit {
  id  String  @default(uuid())  @id
  state Int @unique
  lga Int
  ward  Int
  puNumber Int
  createdAt DateTime  @default(now())
  elections ElectionPollingUnits[]
  unitResults UnitResult[]

  @@index([state, lga, ward, puNumber])
}

model Election {
  id  String  @default(uuid()) @id
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  electionType  String  @unique
  electionDate  DateTime  @unique
  pollinUnits ElectionPollingUnits[]
  unitResults UnitResult[]

  @@index([electionType])
}

model ElectionPollingUnits {
  election  Election  @relation(fields: [electionId], references: [id])
  electionId  String
  pollingUnit PollingUnit @relation(fields: [pollingunitId], references: [id])
  pollingunitId String
  assignedAt  DateTime  @default(now())

  @@id([electionId, pollingunitId])
}

model UnitResult {
  id  String  @default(uuid())  @id
  A Int @unique
  AA  Int @unique
  AAC Int @unique
  ADC Int @unique
  ADP Int @unique
  APC Int @unique
  APGA  Int @unique
  APM Int @unique
  APP Int @unique
  BP  Int @unique
  LP  Int @unique
  NNPP  Int @unique
  NRM Int @unique
  PDP Int @unique
  PRP Int @unique
  SDP Int @unique
  YPP Int @unique
  ZLP Int @unique
  resultImage String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  pollingUnit PollingUnit @relation(fields: [pollingunitId], references: [id])
  pollingunitId String
  election Election @relation(fields: [electionId], references: [id])
  electionId  String
}
